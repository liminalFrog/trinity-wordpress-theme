{
  "name": "trinity-theme",
  "version": "1.0.0",
  "description": "A modern WordPress theme with Bootstrap framework, dark/light mode support, and custom blocks.",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "sass assets/scss/style.scss:style.css --style=compressed --source-map --load-path=node_modules",
    "build:js": "webpack --mode=production",
    "watch": "npm-run-all --parallel watch:*",
    "watch:css": "sass assets/scss/style.scss:style.css --watch --source-map",
    "watch:js": "webpack --mode=development --watch",
    "dev": "npm run build && npm run watch",
    "zip": "node scripts/create-zip.js",
    "lint:scss": "stylelint \"assets/scss/**/*.scss\"",
    "lint:js": "eslint assets/js/**/*.js",
    "lint": "npm run lint:scss && npm run lint:js",
    "git:pull": "git pull origin master",
    "git:push": "git add . && git commit -m \"Update theme\" && git push origin master",
    "git:tag": "node scripts/create-tag.js",
    "release": "npm run build && npm run git:tag && npm run zip"
  },
  "keywords": [
    "wordpress",
    "theme",
    "bootstrap",
    "dark-mode",
    "responsive",
    "blocks"
  ],
  "author": "Adam Mureiko",
  "license": "GPL-2.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/trinity-theme.git"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "archiver": "^5.3.1",
    "babel-loader": "^9.1.0",
    "css-loader": "^6.8.0",
    "eslint": "^8.42.0",
    "mini-css-extract-plugin": "^2.7.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.63.0",
    "sass-loader": "^13.3.0",
    "stylelint": "^15.7.0",
    "stylelint-config-standard-scss": "^9.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0"
  },
  "dependencies": {
    "bootstrap": "^5.3.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
